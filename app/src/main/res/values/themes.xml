<resources>

    <style name="Theme.Stories" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

    </style>


    <style name="Text">
        <!-- when styling with UnderlineSpan, set true -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/tx_main</item>
    </style>

    <style name="Text.Header2">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Text.Header3">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Text.Header7">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Text.Header40">
        <item name="android:textSize">@dimen/sp_40</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Text.Header50">
        <item name="android:textSize">@dimen/sp_50</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Text.Content2">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.Content3">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Content5">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>


    <style name="EditText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/tx_main</item>
        <item name="android:paddingLeft">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingStart">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/edittext_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/edittext_padding_vertical</item>
        <item name="android:textColorHint">@color/tx_hint</item>
        <item name="android:hint">@string/type_here</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_corner18_white</item>
    </style>

    <style name="EditText.Background">
        <item name="android:background">@drawable/bg_corner18_white</item>
    </style>


    <style name="EditText.Multiline">
        <item name="android:minLines">5</item>
        <item name="android:maxLines">100</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="EditText.Multiline.Description">
        <item name="android:background">@drawable/none</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
        <item name="android:paddingBottom">80dp</item>
    </style>


    <style name="MaterialButton">
        <item name="android:theme">@style/Theme.MaterialComponents.NoActionBar</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:minHeight">@dimen/dp_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="elevation">40dp</item>
        <item name="cornerRadius">@dimen/dp_18</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
    </style>

    <style name="MaterialButton.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="rippleColor">@color/grey_300</item>
    </style>

    <style name="MaterialButton.PrimaryPurple">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/grey_300</item>
        <item name="cornerRadius">@dimen/dp_26</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
    </style>


    <style name="MaterialButton.Primary.Icon">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:paddingStart">@dimen/dp_0</item>
        <item name="android:paddingLeft">@dimen/dp_0</item>
        <item name="android:paddingEnd">@dimen/dp_0</item>
        <item name="android:paddingRight">@dimen/dp_0</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_icon</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_icon</item>
    </style>


    <style name="MaterialButton.Secondary">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/grey_700</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/dp_1</item>
    </style>

    <style name="MaterialButton.Secondary.Icon">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_icon</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_icon</item>
    </style>


    <style name="TabTitle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>