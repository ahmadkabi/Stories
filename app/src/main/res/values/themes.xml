    <style name="EditText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/tx_main</item>
